<!DOCTYPE html>
<html>
    <head>
        <style>
            body {
                background-color: rgb(180, 213, 219);
                color: rgb(35, 49, 61);
                font-family: Helvetica;
            }

            form {
                text-align: center;
            }

            input{
                border: solid 1px rgb(35, 49, 61);
                border-radius: 5px;
                font-weight: lighter;
                font-size: 11px; 
            }

            h1 {
                text-align: center;
                letter-spacing: 4px; 
                transform: translate(0%, 10%);
            }

            #post-container {
                background-color: white; 
                margin: 16px; 
                padding: 16px; 
                border: solid 1px rgb(35, 49, 61);
                border-radius: 5px;
            }

        </style>
    </head>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        async function handleDeletePost(e) {
            consolde.log("Deleting post...")
            console.log(e.target.id)

            const postId = e.target.id
            const url = '/post' + postId

            try {
                const response = await axios.delete(url)
                console.log(response)
                location.reload()
            } catch (error) {
                console.error(err.toString())
                alert(err.toString())
            }
        }
    </script>

    <body>

        <h1>MOMENTS</h1>

        <form action="/post", method="POST">
            <input type="text" placeholder="Title" name="title" required style="width:150px;">
            <input type="text" placeholder="Body" name="postBody" required style="width:200px;">
            <input type="submit" name="loginbtn" value="Create" style="background-color:rgb(35, 49, 61); color: white;" />
        </form>

        <div>
            <% allPosts.forEach(p => { %>
                <div id="post-container">
                    <div style="font-weight: bold; font-size: 18px;"><%= p.title %></div>
                    <div style="font-weight: lighter;"><%= p.body %></div>
                   
                    <button id='<%= p.id %>' onclick="handleDeletePost(event)" style="font-family:Helvetica; font-size:9px;
                        border: solid 1px rgb(35, 49, 61); background-color: rgb(180, 213, 219); border-radius: 5px;">
                        Edit
                    </button>
                    
                </div>
            <% }) %>
        </div>
    </body>
</html>